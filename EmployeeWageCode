console.log("Welcome to Employee Wage Problem Using Js!!!!!");

const Is_Absent = 0;
const Is_Present = 1;
const Is_PartTime = 1; // changed value from 1 to 3
const Is_FullTime = 2;
const Part_Time_Hrs = 4;
const Full_Time_Hrs = 8;
const Wage_Per_Hour = 20;
function getWorkHrs(jobType)
{
    switch(jobType)
    {
       case Is_PartTime:
        {
        empHrs = Part_Time_Hrs;
        return empHrs;
        }
        case Is_FullTime:
        {
            empHrs = Full_Time_Hrs;
            return empHrs;
        }   
        default:
            return 0;
    }
}
// check emp present or not
{
  let empcheck = Math.floor(Math.random() * 10) % 2;
  if (empcheck == Is_Absent) {
    console.log("Employee is Absent");
    return;
  } else {
    console.log("Employee is Present");
  }
}

// calculate emp wages
{
  let empHrs = 0;
  let empWage = 0;
  let empType = Math.floor(Math.random() * 10) % 3;
 
      empHrs = getWorkHrs(empType)
      empWage = empHrs * Wage_Per_Hour;
    
  console.log("Emp Wage of employee is :" + empWage);
}
